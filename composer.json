{
    "name": "square360/s360_security_core",
    "description": "Provides security configurations including autoban rules for protecting against common web attacks.",
    "type": "drupal-module",
    "keywords": [
        "Drupal",
        "Security",
        "Autoban",
        "Protection"
    ],
    "license": "GPL-2.0-or-later",
    "homepage": "https://packages.square360.com",
    "support": {
        "issues": "https://packages.square360.com",
        "source": "https://packages.square360.com"
    },
    "authors": [
        {
            "name": "Square360",
            "homepage": "https://square360.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://packages.square360.com"
        }
    ],
    "require": {
        "php": "^8.1 || ^8.2 || ^8.3",
        "drupal/core": "^10 || ^11",
        "drupal/autoban": "^1.0",
        "drupal/advban": "^1.0"
    },
    "require-dev": {
        "drupal/coder": "^8.3",
        "squizlabs/php_codesniffer": "3.*",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "code-sniff": [
            "./vendor/bin/phpcs --standard=Drupal --extensions=php,module,inc,install,test,profile,theme,info,txt,md --ignore=node_modules,bower_components,vendor .",
            "./vendor/bin/phpcs --standard=DrupalPractice --extensions=php,module,inc,install,test,profile,theme,info,txt,md --ignore=node_modules,bower_components,vendor ."
        ],
        "code-fix": [
            "./vendor/bin/phpcbf --standard=Drupal --extensions=php,module,inc,install,test,profile,theme --ignore=node_modules,bower_components,vendor ."
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false
        },
        "sort-packages": true
    }
}
